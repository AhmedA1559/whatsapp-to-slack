# Slack Incoming Webhook URL (for posting to threads)
# Get this from: Slack App > Incoming Webhooks > Add New Webhook to Workspace
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/WEBHOOK/URL"

# Slack Bot Token (for API calls - needed to get message timestamps)
# Get this from: Slack App > OAuth & Permissions > Bot User OAuth Token
SLACK_BOT_TOKEN="xoxb-your-bot-token"

# Slack Channel ID (where new tickets are posted)
# Right-click channel > View channel details > scroll to bottom for ID
SLACK_CHANNEL_ID="C0123456789"

# Vonage AI Studio API Key
# Get this from: AI Studio > Click user icon > Generate API Key
AI_STUDIO_KEY="your-ai-studio-api-key"

# AI Studio Region (eu or us)
AI_STUDIO_REGION="eu"

# Server Port (optional, defaults to 3000)
PORT=3000

# Cloudinary (for sending images/videos from Slack to WhatsApp)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Redis (for session persistence)
REDIS_URL="redis://redis.railway.internal:6379"
